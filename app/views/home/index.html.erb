<div class="container">
    
    <table class="table table-bordered">
        <th>#</th>
        <th>User Name</th>
        <th>Email</th>
        <% @users.each do |user| %>
            <% unless current_user == user %>
                <% index=1 %>
                <tr>
                    <td><%= index %></td>
                    <td><%= user.chat_name %></td>
                    <td><%= user.email %></td>
                    <td><a href="/chat/<%=user.id%>">Click here to Chat</a></td>
                </tr>
                <% index= index+1 %>
            <% end %>
        <% end %>
    </table>
</div>

